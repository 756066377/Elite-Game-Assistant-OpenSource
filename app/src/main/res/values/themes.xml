<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Compose -->
    <style name="Theme.GameAssistant" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Theme for Compose components that don't use Material3 -->
    <style name="Theme.GameAssistant.Compose" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>